# ============================================================
# TENIS APP — Environment Variables
# Copy this file to .env.local and fill in your values.
# NEVER commit .env.local to git.
# ============================================================

# ---- SUPABASE (get from: https://supabase.com/dashboard/project/_/settings/api) ----
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
# Direct DB connection (for migrations)
SUPABASE_DB_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres

# ---- NEXT.JS WEB APP (prefix with NEXT_PUBLIC_ for client-side access) ----
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ---- EXPO MOBILE APP (prefix with EXPO_PUBLIC_ for client-side access) ----
EXPO_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
# Point to your web app tRPC endpoint
EXPO_PUBLIC_API_URL=http://localhost:3000

# ---- OAUTH (configure in Supabase Dashboard → Auth → Providers) ----
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
APPLE_CLIENT_ID=com.yourcompany.tenis
APPLE_CLIENT_SECRET=YOUR_APPLE_CLIENT_SECRET

# ---- STRIPE (Phase 3 — leave empty for Phase 1) ----
STRIPE_SECRET_KEY=sk_test_
STRIPE_PUBLISHABLE_KEY=pk_test_
STRIPE_WEBHOOK_SECRET=whsec_

# ---- EAS (Expo Application Services — for app builds) ----
EAS_PROJECT_ID=YOUR_EAS_PROJECT_ID
