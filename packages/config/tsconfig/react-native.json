{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["esnext"],
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "jsx": "react-native",
    "noEmit": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "app", "components", "hooks", "lib", "store"],
  "exclude": ["node_modules"]
}
